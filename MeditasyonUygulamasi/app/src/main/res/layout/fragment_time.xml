<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeFragment"
    android:background="#F6D9E3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="322dp"
            android:layout_height="306dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="36dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/clock" />

        <Chronometer
            android:id="@+id/kronometre"
            android:layout_width="353dp"
            android:layout_height="124dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="-120dp"
            android:textColor="#FE86A8"
            android:textSize="35dp"> <!-- ImageView'in üstüne hizala -->
        </Chronometer>

        <Button
            android:id="@+id/basladur"
            android:layout_width="309dp"
            android:layout_height="311dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="168dp"
            android:background="@drawable/timerlotus"
            android:text="@string/Başla"
            android:textColor="#9E033E"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/restart"
            android:layout_width="309dp"
            android:layout_height="311dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="-26dp"
            android:background="@drawable/timerlotus"
            android:text="@string/yeniden_baslat"
            android:textColor="#9E033E"
            android:textSize="20dp">

        </Button>

    </RelativeLayout>
</RelativeLayout>
